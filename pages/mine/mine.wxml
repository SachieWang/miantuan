<i-row i-class="row2">
  <i-col span="24">
    <i-grid>
      <i-grid-item i-class="grid1">
        <i-grid-icon>
          <image src="{{userInfo.avatarUrl}}" />
        </i-grid-icon>
        <i-grid-label>我的求职</i-grid-label>
      </i-grid-item>
      <i-grid-item i-class="grid2">
        <i-grid-icon>
          <image src="{{userInfo.avatarUrl}}" />
        </i-grid-icon>
        <i-grid-label>企业邀请</i-grid-label>
      </i-grid-item>
    </i-grid>
    <i-grid>
      <i-grid-item i-class="grid3">
        <i-grid-icon>
          <i-icon type="group" size="28" color="#fff" />
        </i-grid-icon>
        <i-grid-label>拼团进度</i-grid-label>
      </i-grid-item>
      <i-grid-item i-class="grid4">
        <i-grid-icon>
          <image src="{{userInfo.avatarUrl}}" />
        </i-grid-icon>
        <i-grid-label>通知面试</i-grid-label>
      </i-grid-item>
    </i-grid>
  </i-col>
</i-row>


