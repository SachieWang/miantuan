<block wx:if="{{!hasUserInfo && canIUse}}">
  <i-card title="账户余额：￥0" extra="未登录" thumb="https://i.loli.net/2017/08/21/599a521472424.jpg">
    <view slot="content">
      <i-button i-class='text' open-type="getUserInfo" bindgetuserinfo="getUserInfo" type='info' size='small' shape='circle'>登录</i-button>
    </view>
    <view slot="footer">
      <i-button i-class='text' type='info' size='small' shape='circle'>企业中心</i-button>
      <!--text class='text'>企业中心</text-->
    </view>
  </i-card>
</block>
<block wx:else>
  <i-card title="账户余额：￥{{ballery}}" extra="{{userInfo.nickName}}" thumb="{{userInfo.avatarUrl}}">
    <view slot="content">
      <i-button i-class='text' type='info' size='small' shape='circle'>简历编辑</i-button>
      <!--text class='text'>简历编辑</text-->
    </view>
    <view slot="footer">
      <i-button i-class='text' type='info' size='small' shape='circle'>企业中心</i-button>
    </view>
  </i-card>
</block>

